html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='http://maps.google.com/maps/api/js?sensor=false')
    script(src='https://ajax.googleapis.com/ajax/libs/mootools/1.4.5/mootools-yui-compressed.js')
    script(src='/javascripts/mootools-more-1.4.0.1.js')
    script(src='/javascripts/init.js')
    script
      var channel_id = '#{channel_id}';
  - var body_class = (channel_id != '' ? 'channel_on' : '')
  body(class=body_class)
    #notifications
      - for (var i in flash)
        - for (var j in flash[i])
          div(class='.' + i) #{flash[i][j]}
    != body